{
	"name": "mat-tools",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"lint-staged": {
		"*.{css,scss}": "npm run stylelint:fix",
		"*.{js,jsx,ts,tsx}": "npm run lint",
		"*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
	},
	"scripts": {
		"dev": "vite --host",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"stylelint": "stylelint \"src/**/*.{css,scss}\"",
		"stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
		"lint": "eslint --fix",
		"format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore",
		"check": "npm run stylelint:fix && npm run lint && npm run format",
		"prepare": "husky",
		"server": "json-server --host 192.168.0.105 --watch src/utils/db.json --port 3001"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^2.9.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-redux": "^9.2.0",
		"react-router-dom": "^7.9.1"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/react-router-dom": "^5.3.3",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"@vitejs/plugin-react": "^5.0.0",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"json-server": "^1.0.0-beta.3",
		"lint-staged": "^16.2.0",
		"prettier": "^3.6.2",
		"sass": "^1.93.3",
		"stylelint": "^16.24.0",
		"stylelint-config-standard": "^39.0.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-order": "^7.0.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vite-plugin-svgr": "^4.5.0",
		"vite-tsconfig-paths": "^5.1.4"
	}
}
